{
  "name": "cqrs-connector",
  "config": {
    "connector.class": "io.debezium.connector.mysql.MySqlConnector",
    "database.hostname": "db-mysql-cqrs",
    "database.port": "3306",
    "database.user": "root",
    "database.server.id": "100000",
    "database.server.name": "cqrs_server",
    "topic.prefix" : "cqrs-",
    "tasks.max" : "1",
    "database.include.list": "cqrs",
    "table.include.list": "cqrs.category,cqrs.seller,cqrs.discount,cqrs.hotdeal_item",
    "database.allowPublicKeyRetrieval":"true",
    "database.history.kafka.bootstrap.servers": "kafka:9092",
    "database.history.kafka.topic": "cqrs-history-topic",
    "schema.history.internal.kafka.bootstrap.servers" : "kafka:9092",
    "schema.history.internal.kafka.topic": "cqrs-history-topic",
    "key.converter": "org.apache.kafka.connect.storage.StringConverter",
    "key.converter.schemas.enable": "false",
    "value.converter": "org.apache.kafka.connect.json.JsonConverter",
    "value.converter.schemas.enable": "false",
    "include.schema.changes": "false",
    "snapshot.mode": "schema_only",
    "decimal.handling.mode": "string",
    "snapshot.locking.mode": "none",
    "transforms": "Reroute",
    "transforms.Reroute.type": "io.debezium.transforms.ByLogicalTableRouter",
    "transforms.Reroute.topic.regex": "(.*)(cqrs).(.*)",
    "transforms.Reroute.topic.replacement": "db_cqrs_$3"
  }
}